# #  exec-env -*- mode: sh -*-
# https://asdf-vm.com/plugins/create.html#bin-exec-env
# prepare the environment for executing tool shims
#

set -euo pipefail

function export_dotnet_home() {
    if [[ -z ${DOTNET_ROOT:-""} ]]; then
        export DOTNET_ROOT="${ASDF_INSTALL_PATH}"
        export DOTNET_CLI_HOME="${ASDF_INSTALL_PATH}"
    fi
}

export_dotnet_home
